<script>
  let scores = { 'ë…¹ì°¨': 0, 'í—ˆë¸Œí‹°': 0, 'í™ì°¨': 0, 'êµ­í™”ì°¨': 0, 'ë£¨ì´ë³´ìŠ¤í‹°': 0 };

  function choose(choice, next) {
    scores[choice]++;
    document.querySelector('.question.active').classList.remove('active');
    if (next === 'result') {
      showResult();
    } else {
      document.getElementById(next).classList.add('active');
    }
  }

  function showResult() {
    let max = 0;
    let finalChoice = '';
    for (let key in scores) {
      if (scores[key] > max) {
